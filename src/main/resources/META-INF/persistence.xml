<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence version="3.0" xmlns="https://jakarta.ee/xml/ns/persistence">

    <persistence-unit name="travelDB" transaction-type="JTA">

        <jta-data-source>jdbc/travelDB</jta-data-source>

        <exclude-unlisted-classes>false</exclude-unlisted-classes>

        <properties>
            <property name="jakarta.persistence.schema-generation.database.action" value="create-or-validate"/>
        </properties>

    </persistence-unit>
</persistence>